//Write a program to print the following pattern:
*
***
*****
*******
*********
*******
*****
***
*
#include <stdio.h>
int main()
            {
    int i, j, space, n = 5;

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    // Upper part
    for(i = 1; i <= n; i++)
    {
        for(space = i; space < n; space++)
        {
            printf(" ");
        }
        for(j = 1; j <= (2*i - 1); j++)
        {
            printf("*");
        }
        printf("\n");
    }

    for(i = n - 1; i >= 1; i--)
    {
        for(space = n; space > i; space--)
        {
            printf(" ");
        }
        for(j = 1; j <= (2*i - 1); j++)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
