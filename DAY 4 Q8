//Write a program to find and display the sum of the first n natural numbers.
#include <stdio.h>
int main() 
	{
	printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch-B5");
	printf("\n----------------------------------\n");
    int n, sum = 0;
    printf("Enter a number: ");
    scanf("%d", &n);
    sum = n * (n + 1) / 2;
    printf("Sum = %d", sum);

    return 0;
}
