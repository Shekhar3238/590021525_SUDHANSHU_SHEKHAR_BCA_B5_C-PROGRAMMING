//Write a program to find the LCM of two numbers.
#include <stdio.h>
int main()
            {
    int a, b, lcm;

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    if(a > b)
        lcm = a;
    else
        lcm = b;

    while(1)
    {
        if(lcm % a == 0 && lcm % b == 0)
        {
            printf("LCM = %d", lcm);
            break;
        }
        lcm++;
    }

    return 0;
}
