//Add two matrices.
Input 1:
2 2
1 2
3 4
2 2
5 6
7 8
Output 1:
6 8
10 12

#include <stdio.h>

int main()
            {
    int r1, c1, r2, c2, i, j;
    int a[10][10], b[10][10], sum[10][10];

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    printf("Enter number of rows and columns for first matrix: ");
    scanf("%d %d", &r1, &c1);

    printf("Enter elements of first matrix:\n");
    for(i = 0; i < r1; i++)
    {
        for(j = 0; j < c1; j++)
        {
            scanf("%d", &a[i][j]);
        }
    }

    printf("Enter number of rows and columns for second matrix: ");
    scanf("%d %d", &r2, &c2);

    if(r1 != r2 || c1 != c2)
    {
        printf("Matrix addition not possible! Dimensions must match.\n");
        return 0;
    }

    printf("Enter elements of second matrix:\n");
    for(i = 0; i < r2; i++)
    {
        for(j = 0; j < c2; j++)
        {
            scanf("%d", &b[i][j]);
        }
    }

    // Add both matrices
    for(i = 0; i < r1; i++)
    {
        for(j = 0; j < c1; j++)
        {
            sum[i][j] = a[i][j] + b[i][j];
        }
    }

    printf("Resultant Matrix (Sum):\n");
    for(i = 0; i < r1; i++)
    {
        for(j = 0; j < c1; j++)
        {
            printf("%d ", sum[i][j]);
        }
        printf("\n");
    }

    return 0;
}
