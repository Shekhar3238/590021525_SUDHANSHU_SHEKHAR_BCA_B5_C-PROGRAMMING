//Write a program to find the sum of digits of a number.
#include <stdio.h>
int main()
            {
    int num, sum = 0, remainder;

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    printf("Enter a number: ");
    scanf("%d", &num);

    while(num != 0)
    {
        remainder = num % 10;
        sum = sum + remainder;
        num = num / 10;
    }

    printf("Sum of digits = %d", sum);

    return 0;
}
