//Reverse a string.
Input 1:
abcd
Output 1:
dcba

#include <stdio.h>

int main()
            {
    char str[100];
    int length = 0, i;

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    printf("Enter a string: ");
    gets(str);

    // Find length of the string manually
    while(str[length] != '\0')
    {
        length++;
    }

    printf("Reversed string: ");
    for(i = length - 1; i >= 0; i--)
    {
        printf("%c", str[i]);
    }
    printf("\n");

    return 0;
}
