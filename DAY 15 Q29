//Q29 (Loops without Arrays/Strings)
//Write a program to calculate the factorial of a number.
#include <stdio.h>
int main()
            {
    int n, i;
    long long fact = 1; 

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    printf("Enter a number: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++)
    {
        fact = fact * i;
    }

    printf("Factorial of %d = %lld", n, fact);

    return 0;
}
