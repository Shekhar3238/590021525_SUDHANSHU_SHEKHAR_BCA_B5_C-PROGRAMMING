//Write a program to print the following pattern:
*****
 ****
  ***
   **
    *
#include <stdio.h>
int main()
            {
    int i, j, space;

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    for(i = 5; i >= 1; i--)
    {
        for(space = 5; space > i; space--)
        {
            printf(" ");
        }
        for(j = 1; j <= i; j++)
        {
            printf("*");
        }
        printf("\n");
    }

    return 0;
}
