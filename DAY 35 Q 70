//Rotate an array to the right by k positions.
Input 1:
5
1 2 3 4 5
2
Output 1:
4 5 1 2 3

#include <stdio.h>

int main()
            {
    int n, k, i, arr[100], temp[100];

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }
    printf("Enter number of positions to rotate (k): ");
    scanf("%d", &k);
    k = k % n; // Handle cases where k > n
    for(i = 0; i < k; i++)
    {
        temp[i] = arr[n - k + i];
    }
    for(i = n - 1; i >= k; i--)
    {
        arr[i] = arr[i - k];
    }
    for(i = 0; i < k; i++)
    {
        arr[i] = temp[i];
    }
    printf("Array after rotation:\n");
    for(i = 0; i < n; i++)
    {
        printf("%d ", arr[i]);
    }

    return 0;
}
