//Toggle case of each character in a string.
Input 1:
Hello
Output 1:
hELLO

#include <stdio.h>

int main()
            {
    char str[100];
    int i = 0;

    printf("Name - SUDHANSHU SHEKHAR \nSAP ID - 590021525 \nCourse - BCA \nBatch - B5");
    printf("\n----------------------------------\n");

    printf("Enter a string: ");
    gets(str);

    while(str[i] != '\0')
    {
        if(str[i] >= 'a' && str[i] <= 'z')
            str[i] = str[i] - 32;  // lowercase → uppercase
        else if(str[i] >= 'A' && str[i] <= 'Z')
            str[i] = str[i] + 32;  // uppercase → lowercase
        i++;
    }

    printf("%s\n", str);

    return 0;
}
